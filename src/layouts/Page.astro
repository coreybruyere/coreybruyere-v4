---
import BaseLayout from "./BaseLayout.astro";

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BaseLayout>
  <article>
    <div class="hero-image">
      {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
    </div>
    <div class="prose">
      <div class="title">
        <h1>{title}</h1>
        <hr />
      </div>
      <slot />
    </div>
  </article>
</BaseLayout>
