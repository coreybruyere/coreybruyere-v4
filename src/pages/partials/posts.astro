---
import ContentfulPosts from "../../components/ContentfulPosts.astro";
import { POSTS_PER_PAGE_MAX, POSTS_PER_PAGE_MIN } from "../../consts";

import { Debug } from "astro:components";

const { pathname } = Astro.url;
const isBlogPath = pathname === "/blog";
export const partial = true;
export const prerender = false;
---

<ContentfulPosts
  postsPerPage={isBlogPath ? POSTS_PER_PAGE_MAX : POSTS_PER_PAGE_MIN}
/>
