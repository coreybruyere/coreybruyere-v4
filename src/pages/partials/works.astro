---
import ContentfulWorks from "../../components/ContentfulWorks.astro";
import { POSTS_PER_PAGE_MAX, POSTS_PER_PAGE_MIN } from "../../consts";

import { Debug } from "astro:components";

const { pathname } = Astro.url;
const isWorkPath = pathname === "/work";
export const partial = true;
---

<ContentfulWorks
  postsPerPage={isWorkPath ? POSTS_PER_PAGE_MAX : POSTS_PER_PAGE_MIN}
/>
