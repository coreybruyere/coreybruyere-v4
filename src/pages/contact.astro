---
import Layout from "../layouts/Page.astro";
import { css } from "../../styled-system/css";
---

<Layout
  title="Contact"
  description="Lorem ipsum dolor sit amet"
  pubDate={new Date("August 08 2021")}
  heroImage="/blog-placeholder-about.jpg"
>
  <form
    method="POST"
    id="form"
    hx-post="https://your-coolify-deployment-url/functions/contact"
    hx-target="#result"
    hx-swap="innerHTML"
  >
    <input
      class={css({
        borderWidth: "1px",
        borderColor: "gray.300",
      })}
      type="hidden"
      name="access_key"
      value="cc6df478-e705-4d70-9604-9a1f8975c475"
    />

    <input
      class={css({
        borderWidth: "1px",
        borderColor: "gray.300",
      })}
      type="text"
      name="name"
      required
    />
    <input
      class={css({
        borderWidth: "1px",
        borderColor: "gray.300",
      })}
      type="email"
      name="email"
      required
    />
    <textarea
      class={css({
        borderWidth: "1px",
        borderColor: "gray.300",
      })}
      name="message"
      required></textarea>
    <button
      class={css({
        borderWidth: "1px",
        borderColor: "gray.300",
      })}
      type="submit"
    >
      Submit Form
    </button>
    <div id="result"></div>
  </form>
</Layout>
